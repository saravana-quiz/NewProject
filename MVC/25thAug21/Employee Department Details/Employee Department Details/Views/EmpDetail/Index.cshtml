@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<EmployeeDetails>

<!DOCTYPE html>

<html>
<head>
<meta name="viewport" content="width=device-width" />
<title>Index</title>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
<link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">

<div class="row">
    <div class="col-6">
        <h4>Employee Details</h4>
    </div>
    <div class="col-3">
        <a asp-action="Create" class="btn btn-primary">Add New Employee</a>
    </div>
    <div class="col-3">
        <a asp-controller="Department" asp-action="Create" class="btn btn-primary">Add Department</a>
    </div>
</div>

<div class="row mt-5">
    <div class="col-12">

        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Designation
                    </th>
                    <th>
                        Department Id
                    </th>
                    <th>
                        Hire Date
                    </th> 
                    <th>
                        Edit
                    </th>
                    <th>
                        Remove
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td width="10%">
                        @item.Id
                    </td>
                    <td width="20%">
                        @item.Name
                    </td>
                    <td width="20%">
                        @item.Designation
                    </td>
                    <td width="20%">
                        @item.DepartmentId
                    </td>
                    <td width="15%">
                        @item.HireDate
                    </td>
                    <td width="15%">
                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary"><i class="fa fa-edit"></i></a>
                    </td>
                    <td width="15%">
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary"
                           onclick="return confirm('Are you Sure to delete the Data')"><i class="fa fa-trash"></a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>