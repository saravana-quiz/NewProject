@{
    ViewData["Title"] = "Create";
}

@model EmployeeDetails

<form method="post" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <h3>Add New Employee Details</h3>
    </div>
    <div class="row">
        <div class="col-12">          
            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-6">
                    <input type="text" asp-for="Name" />
                </div><span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="Designation"></label>
                </div>
                <div class="col-6">
                    <input type="text" asp-for="Designation" />
                </div><span asp-validation-for="Designation" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="DepartmentId"></label>
                </div>
                <div class="col-3">
                    <select asp-for="DepartmentId" asp-items="@ViewBag.myDropdown" class="form-control">
                        <option selected="">--Select--</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="HireDate"></label>
                </div>
                <div class="col-6">
                    <input type="date" asp-for="HireDate" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-8">
                    <input type="submit" class="btn btn-info w-50" />
                </div>
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-danger w-50">Back</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}