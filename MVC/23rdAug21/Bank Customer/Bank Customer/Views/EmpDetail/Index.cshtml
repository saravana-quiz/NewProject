@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<CustomerDetails>

<div class="row">
    <div class="col-6">
        <h4>Customer Details</h4>
    </div>
    <div class="col-3 offset-3">
        <a asp-action="Create" class="btn btn-primary">Add New Customer</a>
    </div>
</div>

<div class="row mt-5">
    <div class="col-12">

        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Address
                    </th>
                    <th>
                        Age
                    </th>
                    <th>
                        Gender
                    </th>
                    <th>
                        Opening Balance
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="20%">
                            @item.Id
                        </td>
                        <td width="30%">
                            @item.Name
                        </td>
                        <td width="20%">
                            @item.Address
                        </td>
                        <td width="20%">
                            @item.Age
                        </td>
                        <td width="20%">
                            @item.Gender
                        </td>
                        <td width="20%">
                            @item.OpeningBalance
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
