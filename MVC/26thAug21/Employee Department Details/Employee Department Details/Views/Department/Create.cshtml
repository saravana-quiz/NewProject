@{
    ViewData["Title"] = "Create";
}

@model DepartmentDetails

<form method="post" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <h3>Add Department Details</h3>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="DepartmentName"></label>
                </div>
                <div class="col-6">
                    <input type="text" asp-for="DepartmentName" />
                </div><span asp-validation-for="DepartmentName" class="text-danger"></span>
            </div>          

            <div class="form-group row">
                <div class="col-8">
                    <input type="submit" class="btn btn-info w-50" />
                </div>
                <div class="col-4">
                    <a asp-controller="EmpDetail" asp-action="Create" class="btn btn-danger w-50">Back</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}